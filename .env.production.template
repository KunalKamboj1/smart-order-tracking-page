# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here

# App Scopes
SCOPES=write_orders,read_orders,read_fulfillments,write_themes,read_themes,write_script_tags,read_script_tags,read_products,write_products

# Production URLs (Replace with your actual deployment URLs)
SHOPIFY_APP_URL=https://your-backend-app.onrender.com
HOST=https://your-backend-app.onrender.com
TUNNEL_URL=your-backend-app.onrender.com

# Frontend URL
FRONTEND_URL=https://your-frontend-app.netlify.app

# Database Configuration
DATABASE_URL=./database.sqlite

# Session Security (Generate a secure random string)
SESSION_SECRET=generate_a_secure_32_character_random_string_here

# Environment
NODE_ENV=production
PORT=3001

# Shopify CLI Configuration
DEV_STORE_URL=your-store.myshopify.com